<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_custom_color_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    style="@style/MyDialogStyle"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_custom_color_dialog"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/galery"
            android:contentDescription="Camara"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/eye_camera"
            android:contentDescription="Galeria"
            android:padding="8dp"/>

    </LinearLayout>




</LinearLayout>